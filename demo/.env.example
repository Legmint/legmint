# ===========================================
# Legmint Frontend - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values

# ----- API Configuration -----
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# ----- Authentication (Clerk.js) -----
# Get these from: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Clerk.js Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ----- Stripe (Payment) -----
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# ----- Analytics -----
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Posthog (optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ----- Feature Flags -----
NEXT_PUBLIC_ENABLE_REFERRALS=true
NEXT_PUBLIC_ENABLE_TESTIMONIALS=true
NEXT_PUBLIC_ENABLE_LIVE_CHAT=false

# ----- Environment -----
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_SITE_NAME=Legmint

# ----- Error Tracking (Sentry) -----
# Get these from: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_org
SENTRY_PROJECT=legmint-frontend

# ----- CDN & Assets -----
NEXT_PUBLIC_CDN_URL=https://cdn.legmint.com
NEXT_PUBLIC_ASSETS_URL=https://assets.legmint.com

# ----- Support -----
NEXT_PUBLIC_SUPPORT_EMAIL=support@legmint.com
NEXT_PUBLIC_INTERCOM_APP_ID=xxxxx

# ----- SEO -----
NEXT_PUBLIC_SITE_DESCRIPTION=Legal docs, minted for startups. Interactive templates for founders to incorporate, raise, hire, and scale.
NEXT_PUBLIC_SITE_KEYWORDS=legal documents,templates,SAFE,fundraising,SaaS contracts
