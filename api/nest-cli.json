{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      "**/*.yaml",
      "**/*.json",
      { "include": "../migrations/**/*.sql", "outDir": "dist/migrations", "watchAssets": false }
    ],
    "watchAssets": true
  }
}
